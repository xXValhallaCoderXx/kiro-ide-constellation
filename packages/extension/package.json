{
  "name": "kiro-ide-constellation",
  "displayName": "kiro-ide-constellation",
  "description": "Kiro IDE Extension",
  "version": "0.0.5",
  "publisher": "xXValhallaCoderXx",
  "engines": {
    "vscode": "^1.100.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:kiro-ide-constellation.openDashboard",
    "onView:kiroConstellation.sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kiroConstellation",
          "title": "Kiro Constellation",
          "icon": "./media/kiro.svg"
        }
      ]
    },
    "views": {
      "kiroConstellation": [
        {
          "id": "kiroConstellation.sidebar",
          "name": "Sidebar",
          "type": "webview",
          "icon": "./media/kiro.svg"
        }
      ]
    },
    "mcpServerDefinitionProviders": [
      {
        "id": "kiro-constellation",
        "label": "Kiro Constellation"
      }
    ],
    "commands": [
      {
        "command": "kiro-ide-constellation.openDashboard",
        "title": "Kiro: Open Dashboard"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p ./",
    "dev": "tsc -p ./ --watch",
    "typecheck": "tsc -p ./ --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "echo 'no tests yet'",
    "prepackage": "bash ../../scripts/prepare-vsix.sh",
    "prepackage:root": "bash ../../scripts/prepare-vsix.sh",
    "package": "vsce package --no-dependencies --allow-missing-repository",
    "package:root": "vsce package --no-dependencies --allow-missing-repository --out ../../kiro-ide-constellation.vsix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xXValhallaCoderXx/kiro-ide-constellation"
  },
  "files": [
    "out/**",
    "media/**"
  ],
  "dependencies": {
    "@kiro/shared": "workspace:*"
  }
}

