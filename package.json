{
  "name": "kiro-ide-constellation",
  "displayName": "kiro-ide-constellation",
  "description": "Kiro IDE Extension",
  "version": "0.0.1",
  "publisher": "xXValhallaCoderXx",
  "engines": {
    "vscode": "^1.103.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xXValhallaCoderXx/kiro-ide-constellation"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Kiro Constellation",
      "properties": {
        "kiro.mcp.port": {
          "type": "number",
          "default": 0,
          "description": "Port for the built-in MCP server (0 = pick a free port)."
        },
        "kiro.mcp.path": {
          "type": "string",
          "default": "/mcp",
          "description": "HTTP path for the built-in MCP server."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kiroConstellation",
          "title": "Kiro Constellation",
          "icon": "./media/kiro.svg"
        }
      ]
    },
    "views": {
      "kiroConstellation": [
        {
          "id": "kiroConstellation.sidebar",
          "name": "Sidebar",
          "type": "webview",
          "icon": "./media/kiro.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "kiro-ide-constellation.openDashboard",
        "title": "Kiro: Open Dashboard"
      },
      {
        "command": "kiro-ide-constellation.mcp.copyUrl",
        "title": "Kiro: Copy MCP URL"
      },
      {
        "command": "kiro-ide-constellation.mcp.reregister",
        "title": "Kiro: Re-register MCP Server"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "vite build --config web/vite.config.ts && tsc -p ./",
    "watch": "vite build --watch --config web/vite.config.ts & tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "clean": "rimraf out",
    "clean:web": "find ./web -type f -name '*.js' -delete && find ./web -type f -name '*.js.map' -delete",
    "build": "npm run clean && npm run clean:web && npm run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.25.1",
    "preact": "^10.27.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "ws": "^8.18.3"
  }
}
