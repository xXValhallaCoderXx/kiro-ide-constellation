{
  "name": "kiro-ide-constellation",
  "displayName": "kiro-ide-constellation",
  "description": "Kiro IDE Extension",
  "version": "0.0.1",
  "publisher": "xXValhallaCoderXx",
  "engines": {
    "vscode": "^1.103.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xXValhallaCoderXx/kiro-ide-constellation"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kiroConstellation",
          "title": "Kiro Constellation",
          "icon": "./media/kiro.svg"
        }
      ]
    },
    "views": {
      "kiroConstellation": [
        {
          "id": "kiroConstellation.sidebar",
          "name": "Sidebar",
          "type": "webview",
          "icon": "./media/kiro.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "kiro-ide-constellation.openDashboard",
        "title": "Kiro: Open Dashboard"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -p ./",
    "compile:ui": "vite build",
    "watch": "tsc -watch -p ./",
    "watch:ui": "vite build --watch",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "clean": "rimraf out dist",
    "build": "npm run clean && npm run compile && npm run compile:ui",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "rimraf": "^6.0.1",
    "@vscode/vsce": "^3.2.1",
    "preact": "^10.25.7",
    "vite": "^6.0.7",
    "@preact/preset-vite": "^2.10.1"
  }
}
