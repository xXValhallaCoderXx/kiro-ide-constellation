{
  "name": "kiro-ide-constellation",
  "displayName": "kiro-ide-constellation",
  "description": "Kiro IDE Extension",
  "version": "0.0.5",
  "publisher": "xXValhallaCoderXx",
  "engines": {
    "vscode": "^1.100.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xXValhallaCoderXx/kiro-ide-constellation"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kiroConstellation",
          "title": "Kiro Constellation",
          "icon": "./media/kiro.svg"
        }
      ]
    },
    "views": {
      "kiroConstellation": [
        {
          "id": "kiroConstellation.sidebar",
          "name": "Sidebar",
          "type": "webview",
          "icon": "./media/kiro.svg"
        }
      ]
    },
    "mcpServerDefinitionProviders": [
      {
        "id": "kiro-constellation",
        "label": "Kiro Constellation"
      }
    ],
    "commands": [
      {
        "command": "kiro-ide-constellation.openDashboard",
        "title": "Kiro: Open Dashboard"
      },
      {
        "command": "kiro-ide-constellation.pingAndOpen",
        "title": "Kiro: Ping MCP and Open Dashboard"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
  "compile": "vite build --config web/vite.config.ts && tsc -p ./ && npm run bundle:mcp:http",
    "watch": "vite build --watch --config web/vite.config.ts & npm run watch:mcp:http & tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "clean": "rimraf out",
    "clean:web": "find ./web -type f -name '*.js' -delete && find ./web -type f -name '*.js.map' -delete",
    "build": "npm run clean && npm run clean:web && npm run compile",
    "package": "vsce package",
  "bundle:mcp:http": "esbuild src/mcp/mcp-http.server.ts --bundle --platform=node --format=cjs --target=node18 --outfile=out/mcp/mcp-http.server.cjs",
  "watch:mcp:http": "esbuild src/mcp/mcp-http.server.ts --bundle --platform=node --format=cjs --target=node18 --outfile=out/mcp/mcp-http.server.cjs --watch"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.23.0",
    "preact": "^10.27.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5"
  }
}
