{
  "name": "kiro-ide-constellation",
  "displayName": "kiro-ide-constellation",
  "description": "Kiro IDE Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:kiro-ide-constellation.helloWorld",
    "onCommand:kiro-ide-constellation.openHealthDashboard",
    "onView:kiroConstellation.sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kiroConstellation",
          "title": "Kiro Constellation",
          "icon": "./media/kiro.svg"
        }
      ]
    },
    "views": {
      "kiroConstellation": [
        {
          "id": "kiroConstellation.sidebar",
          "name": "Sidebar",
          "type": "webview",
          "icon": "./media/kiro.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "kiro-ide-constellation.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "kiro-ide-constellation.openHealthDashboard",
        "title": "Open Health Dashboard"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && vite build",
    "watch": "concurrently \"tsc -watch -p ./\" \"vite build --watch\"",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@preact/preset-vite": "^2.10.2",
    "concurrently": "^9.0.0",
    "preact": "^10.19.0",
    "vite": "^5.2.0"
  }
}
