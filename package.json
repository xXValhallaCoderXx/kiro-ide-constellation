{
  "name": "kiro-ide-constellation-workspace",
  "private": true,
  "version": "0.0.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/xXValhallaCoderXx/kiro-ide-constellation"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "watch": "pnpm -r run watch",
    "package": "pnpm --filter kiro-ide-constellation run package",
    "bundle:mcp": "node esbuild.mcp.config.js",
    "watch:mcp": "node esbuild.mcp.config.js --watch",
    "analyze:mcp": "esbuild packages/mcp-server/src/server.ts --bundle --platform=node --format=cjs --target=node18 --metafile=mcp-meta.json --outfile=packages/extension/out/mcp/mcpStdioServer.cjs && esbuild-visualizer --metadata ./mcp-meta.json --open",
    "analyze": "bash scripts/analyze-bundles.sh",
    "clean": "rimraf packages/**/out && rimraf node_modules"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.23.0",
    "esbuild-visualizer": "^0.6.0",
    "eslint": "^9.25.1",
    "preact": "^10.27.1",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vite": "^7.1.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5"
  },
  "packageManager": "pnpm@8.0.0"
}
