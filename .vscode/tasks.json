// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-all",
			"type": "shell",
			"command": "pnpm build",
			"problemMatcher": ["$tsc"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "watch-all",
			"type": "shell",
			"command": "pnpm dev",
			"isBackground": true,
			"problemMatcher": {
				"owner": "watch-all",
				"pattern": {
					"regexp": "^x^"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "."
				}
			},
			"presentation": {
				"reveal": "never",
				"panel": "dedicated",
				"clear": false
			}
		},
		{
			"label": "build-and-watch",
			"dependsOn": ["build-all", "watch-all"],
			"dependsOrder": "sequence"
		}
	]
}
