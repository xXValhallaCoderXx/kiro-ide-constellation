{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (Dev MCP)",
      "type": "extensionHost",
      "request": "launch",
      "preLaunchTask": "watch:dev",
      "env": {
        "CONSTELLATION_SERVER_ID": "constellation-mcp-dev"
      },
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ]
    },
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "preLaunchTask": "watch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ]
    }
  ]
}
